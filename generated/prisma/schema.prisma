generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id   Int      @id @default(autoincrement())
  Date DateTime
  //Client    Client

  BarberId Int
  Barber   Barber @relation(fields: [BarberId], references: [id], onDelete: Restrict)
}

model Barber {
  id        Int       @id @default(autoincrement())
  name      String
  cellphone String
  email     String
  Services  Service[]
}
